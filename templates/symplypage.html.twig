{% extends 'base.html.twig' %}

{% block head %}

    <meta name="description" content="{{ symplyPage.headDescription }}">

{% endblock %}

{% block title %}{{ symplyPage.headTitle }}{% endblock %}

{% block body %}

    <header>
        <h1>{{ symplyPage.pageTitle }}</h1>
        <img src="{{ asset(symplyPage.pageHeaderImageURL) }}" class="img-fluid"
             alt="{{ symplyPage.pageHeaderImageAlt }} }}">
        <h2>{{ symplyPage.pageSlogan }}</h2>
    </header>

    <section id="intro" class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <h2>{{ symplyPage.pageIntroTitle }}</h2>
                    <p>{{ symplyPage.pageIntro }}</p>
                </div>
            </div>
        </div>
    </section>

    <section id="video" class="text-center">
        <div class="container">
            <div class="row">
                <div class="col-12">

                    <h3>{{ symplyPage.sectionVideoTitle }}</h3>

                        {% for videoId in symplyPage.sectionVideoIds %}
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item"
                                        src="https://player.vimeo.com/video/{{ videoId }}?&portrait=0&byline=0"
                                        webkitallowfullscreen mozallowfullscreen allowfullscreen>
                                </iframe>
                            </div>
                        {% endfor %}

                </div>
            </div>
        </div>
    </section>

    <section id="photo" class="text-center">
        <div class="container">
            <div class="col-12">
                <h2>{{ symplyPage.sectionPhotoTitle }}</h2>

                {% for PhotoData in symplyPage.sectionPhotoData %}
                <div class="card">
                    <img class="card-img-top" src="{{ PhotoData[0] }}" alt="One Human Factor - Live - Tracy le Mont - 08/12/2018">
                    <div class="card-body">
                        <p class="card-text">{{ PhotoData[1] }}</p>
                    </div>
                </div>
                {% endfor %}

            </div>
        </div>
    </section>
{% endblock %}

