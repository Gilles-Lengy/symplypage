{% extends 'base.html.twig' %}

{% block title %}{{ symplyPage.headTitle }}{% endblock %}

{% block head %}

    <meta name="description" content="{{ symplyPage.headDescription }}">

    <meta property="og:url" content="{{ app.request.uri }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="{{ symplyPage.headTitle }}"/>
    <meta property="og:description" content="{{ symplyPage.headDescription }}"/>
    <meta property="og:image" content="{{ app.request.uri }}/{{ symplyPage.pageHeaderImageURL }}"/>

    <meta name="twitter:title" content="{{ symplyPage.headTitle }}">
    <meta name="twitter:description" content="{{ symplyPage.headDescription }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{ symplyPage.viaShareLinkTwitter }}">
    <meta name="twitter:image" content="absolute url image 280x150px">

{% endblock %}

{% block body %}


    {% include 'mandatory/header.html.twig' %}


    {% if NULL != symplyPage.sectionOrder %}

        {% for section in symplyPage.sectionOrder %}

            {# switch doesn't works here... Why ???? #}

            {% if section == "intro" %}
                {% include 'sections/intro.html.twig' %}
            {% endif %}

            {% if section == "video" %}
                {% include 'sections/video.html.twig' %}
            {% endif %}

            {% if section == "photo" %}
                {% include 'sections/photo.html.twig' %}
            {% endif %}

            {% if section == "bandcampAlbum" %}
                {% include 'sections/bandcamp-album.html.twig' %}
            {% endif %}

            {% if section == "onTheInternet" %}
                {% include 'sections/on-the-internet.html.twig' %}
            {% endif %}

        {% endfor %}

    {% endif %}

    <section id="share">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-12 mx-auto">
                    <h3>{{ symplyPage.sectionShareTitle }}</h3>
                    <a href="https://www.facebook.com/sharer/sharer.php?u={{ app.request.uri }}"  rel="nofollow" target="_blank" title="{{ symplyPage.textShareLinkFacebook }}" class="btn btn-default btn-lg" target="_blank"
                       onclick="window.open(this.href,'targetWindow','toolbar=no,location=0,status=no,menubar=no,scrollbars=yes,resizable=yes,width=600,height=250'); return false">
                       <i class="fab fa-facebook fa-2"></i> {{ symplyPage.textShareLinkFacebook }}
                    </a>
                    <a href="https://twitter.com/share?url={{ app.request.uri }}&text={{ symplyPage.headTitle }}&via={{ symplyPage.viaShareLinkTwitter }}" rel="nofollow" target="_blank" title="{{ symplyPage.textShareLinkTwitter }}" class="btn btn-default btn-lg"
                       onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=400,width=700'); return false;">
                        <i class="fab fa-twitter fa-2"></i> {{ symplyPage.textShareLinkTwitter }}
                    </a>
                </div>
            </div>
        </div>
    </section>

    {% include 'mandatory/footer.html.twig' %}

{% endblock %}