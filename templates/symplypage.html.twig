{% extends 'base.html.twig' %}

{% block title %}{{ symplyPage.headTitle }}{% endblock %}

{% block head %}

    <meta name="description" content="{{ symplyPage.headDescription }}">

    <meta property="og:url" content="{{ app.request.uri }}"/>
    <meta property="og:type" content="website"/>
    <meta property="og:title" content="{{ symplyPage.headTitle }}"/>
    <meta property="og:description" content="{{ symplyPage.headDescription }}"/>
    <meta property="og:image" content="{{ app.request.uri }}/{{ symplyPage.pageHeaderImageURL }}"/>

    <meta name="twitter:title" content="{{ symplyPage.headTitle }}">
    <meta name="twitter:description" content="{{ symplyPage.headDescription }}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@{{ symplyPage.viaShareLinkTwitter }}">
    <meta name="twitter:image" content="absolute url image 280x150px">

{% endblock %}

{% block body %}


    {% include 'mandatory/header.html.twig' %}


    {% if NULL != symplyPage.sectionOrder %}

        {% for section in symplyPage.sectionOrder %}

            {# switch doesn't works here... Why ???? #}

            {% if section == "text" %}
                {% include 'sections/text.html.twig' %}
            {% endif %}

            {% if section == "video" %}
                {% include 'sections/video.html.twig' %}
            {% endif %}

            {% if section == "photo" %}
                {% include 'sections/photo.html.twig' %}
            {% endif %}

            {% if section == "bandcampAlbum" %}
                {% include 'sections/bandcamp-album.html.twig' %}
            {% endif %}

            {% if section == "onTheInternet" %}
                {% include 'sections/on-the-internet.html.twig' %}
            {% endif %}

            {% if section == "share" %}
                {% include 'sections/share.html.twig' %}
            {% endif %}

        {% endfor %}

    {% endif %}

    {% include 'mandatory/footer.html.twig' %}

{% endblock %}