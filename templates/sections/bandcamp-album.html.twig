<section id="bandcamp-album">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h3>{{ symplyPage.sectionBandcampAlbumTitle }}</h3>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-7 col-sm-12">
                <div id="bandcamp-album-player-container">
                    <iframe seamless=""
                            src="https://bandcamp.com/EmbeddedPlayer/album={{ symplyPage.sectionBandcampAlbumID }}/size={{ symplyPage.sectionBandcampAlbumSize }}/bgcol={{ symplyPage.sectionBandcampAlbumBGColor }}/linkcol={{ symplyPage.sectionBandcampAlbumLinkCol }}{% if NULL != symplyPage.sectionBandcampAlbumArtwork %}/artwork={{ symplyPage.sectionBandcampAlbumArtwork }}{% endif %}/transparent=true/"
                            style="border: 0; height: {{ symplyPage.sectionBandcampAlbumHeight }}px; width: 100%;">
                        <a href="{{ symplyPage.sectionBandcampAlbumUrl }}">{{ symplyPage.sectionBandcampAlbumTitleTitle }}</a>
                    </iframe>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>